{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "Node16",
    "target": "ES2022",
    "outDir": "out",
    "lib": ["ES2022", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"],
      "assets/*": ["src/assets/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.d.ts"]
}
