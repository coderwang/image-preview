// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch-all",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "watch-all"],
			"isBackground": true,
			"problemMatcher": [
				"$tsc-watch",
				{
					"pattern": {
						"regexp": "^.*$"
					},
					"background": {
						"activeOnStart": true,
						"beginsPattern": "webpack is watching the filesâ€¦",
						"endsPattern": "webpack compiled successfully"
					}
				}
			]
		}
	]
}
