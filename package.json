{
  "name": "image-preview",
  "displayName": "Super Image Preview",
  "description": "Preview and manage all images in any folder",
  "keywords": [
    "svg",
    "image",
    "copy base64",
    "compress image",
    "image viewer",
    "preview images",
    "image manager",
    "图片预览"
  ],
  "version": "2.1.3",
  "publisher": "coderwsh",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/coderwang/image-preview"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Super Image Preview",
      "properties": {
        "superImagePreview.excludeDirectoryNames": {
          "type": "array",
          "default": [
            "node_modules",
            "dist"
          ],
          "description": "Exclude the directory name from the preview.",
          "items": {
            "type": "string"
          }
        },
        "superImagePreview.theme": {
          "type": "string",
          "enum": [
            "light",
            "dark"
          ],
          "default": "light",
          "description": "Set the default theme for image preview",
          "enumDescriptions": [
            "Light theme",
            "Dark theme"
          ]
        },
        "superImagePreview.language": {
          "type": "string",
          "enum": [
            "en",
            "zh"
          ],
          "default": "en",
          "description": "Set the default language for image preview",
          "enumDescriptions": [
            "English",
            "简体中文"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "extension.imagePreview",
        "title": "Image Preview"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.imagePreview",
          "when": "explorerResourceIsFolder",
          "group": "z_commands"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build && npm run compile",
    "compile": "webpack --config webpack.extension.config.js",
    "watch": "webpack --config webpack.extension.config.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "build": "webpack",
    "build:watch": "webpack --watch"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^16.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.80.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.56.0",
    "less": "^4.2.0",
    "less-loader": "^11.1.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "antd": "^5.24.4",
    "clsx": "^2.1.1",
    "i18next": "^24.2.3",
    "jotai": "^2.12.2",
    "jotai-immer": "^0.4.1",
    "rc-slider": "^11.1.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.4.1",
    "sonner": "^1.7.4",
    "svgo": "^3.3.2",
    "use-immer": "^0.11.0"
  },
  "optionalDependencies": {
    "sharp": "0.33.5"
  }
}
